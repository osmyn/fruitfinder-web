{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
      "@/auth": ["./auth"],
      "@/components/*": ["./components/*"],
      "@/actions/*": ["./actions/*"],
      "@/lib/*": ["./lib/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/__tests__/Button.test.jsx",
    "app/__tests__/page.test.jsx"
  ],
  "exclude": ["node_modules"]
}
